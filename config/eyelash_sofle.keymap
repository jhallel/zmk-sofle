#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25   // 10

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/macro.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

&mmv_input_listener { input-processors = <&zip_xy_scaler 2 1>; };

&msc_input_listener { input-processors = <&zip_scroll_scaler 2 1>; };

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <100>;       // 300
    delay-ms = <0>;                   // 0
};

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
    trigger-period-ms = <16>;
};

&soft_off { hold-time-ms = <2000>; };

/ {
    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <100>;
    };

    behaviors {
        password_macro: password_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp P &macro_release &macro_press &kp O &macro_release &macro_press &kp N &macro_release &macro_press &kp G &macro_release &macro_press &kp P &macro_release &macro_press &kp O &macro_release &macro_press &kp N &macro_release &macro_press &kp G &macro_release &macro_press &kp P &macro_release &macro_press &kp O &macro_release &macro_press &kp N &macro_release &macro_press &kp G &macro_release &macro_press &kp P &macro_release &macro_press &kp O &macro_release &macro_press &kp N &macro_release &macro_press &kp G &macro_release &macro_press &kp N1 &macro_release &macro_press &kp N3 &macro_release &macro_press &kp N5 &macro_release>;
        };
        bench_password_macro: bench_password_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp Z &macro_release &macro_press &kp X &macro_release &macro_press &kp C &macro_release &macro_press &kp Z &macro_release &macro_press &kp X &macro_release &macro_press &kp C &macro_release &macro_press &kp Z &macro_release &macro_press &kp X &macro_release &macro_press &kp C &macro_release &macro_press &kp Z &macro_release &macro_press &kp X &macro_release &macro_press &kp C &macro_release &macro_press &kp N1 &macro_release &macro_press &kp N3 &macro_release &macro_press &kp N5 &macro_release>;
        };
        git_status: git_status {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp G &macro_release &macro_press &kp I &macro_release &macro_press &kp T &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp S &macro_release &macro_press &kp T &macro_release &macro_press &kp A &macro_release &macro_press &kp T &macro_release &macro_press &kp U &macro_release &macro_press &kp S &macro_release &macro_press &kp RET &macro_release>;
        };
        git_add_all: git_add_all {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp G &macro_release &macro_press &kp I &macro_release &macro_press &kp T &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp A &macro_release &macro_press &kp D &macro_release &macro_press &kp D &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp DOT &macro_release &macro_press &kp RET &macro_release>;
        };
        git_commit: git_commit {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp G &macro_release &macro_press &kp I &macro_release &macro_press &kp T &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp C &macro_release &macro_press &kp O &macro_release &macro_press &kp M &macro_release &macro_press &kp M &macro_release &macro_press &kp I &macro_release &macro_press &kp T &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp DASH &macro_release &macro_press &kp M &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp DQT &macro_release>;
        };
        git_push: git_push {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp G &macro_release &macro_press &kp I &macro_release &macro_press &kp T &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp P &macro_release &macro_press &kp U &macro_release &macro_press &kp S &macro_release &macro_press &kp H &macro_release &macro_press &kp RET &macro_release>;
        };
        git_pull: git_pull {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp G &macro_release &macro_press &kp I &macro_release &macro_press &kp T &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp P &macro_release &macro_press &kp U &macro_release &macro_press &macro_press &kp L &macro_release &macro_press &kp L &macro_release &macro_press &kp RET &macro_release>;
        };
        git_log: git_log {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp G &macro_release &macro_press &kp I &macro_release &macro_press &kp T &macro_release &macro_press &kp SPACE &macro_release &macro_press &kp L &macro_release &macro_press &macro_press &kp O &macro_release &macro_press &kp G &macro_release &macro_press &kp RET &macro_release>;
        };
        print_screen: print_screen {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press &kp PSCRN &macro_release>;
        };
    };

    combos {
        compatible = "zmk,combos";

        softoff {
            bindings = <&soft_off>;
            key-positions = <14 28 40>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp ESC     &kp N1     &kp N2        &kp N3        &kp N4  &kp N5       &kp UP_ARROW     &kp N6     &kp N7     &kp N8     &kp N9           &kp N0      &kp BACKSPACE
&kp TAB     &kp Q      &kp W         &kp E         &kp R   &kp T        &kp DOWN_ARROW   &kp Y      &kp U      &kp I      &kp O            &kp P       &kp BSLH
&kp CAPS    &kp A      &kp S         &kp D         &kp F   &kp G        &kp LEFT_ARROW   &kp H      &kp J      &kp K      &kp L            &kp SEMI    &kp APOS
&kp LSHFT   &kp Z      &kp X         &kp C         &kp V   &kp B        &kp RIGHT_ARROW  &kp N      &kp M      &kp COMMA  &kp DOT          &kp FSLH    &kp ENTER
&kp C_MUTE  &kp LCTRL  &kp LEFT_GUI  &kp LEFT_ALT  &mo 1   &kp SPACE    &kp ENTER        &kp SPACE  &kp ENTER  &mo 2      &kp RIGHT_SHIFT  &kp DELETE
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
            display-name = "Default";
        };

        function_layer {
            bindings = <
&kp GRAVE   &kp F1           &kp F2          &kp F3           &kp F4           &kp F5             &mmv MOVE_UP     &kp F6           &kp F7           &kp F8      &kp F9     &kp F10           &trans
&trans      &kp GRAVE        &mkp LCLK       &mkp MCLK        &mkp RCLK        &mkp MB4           &mmv MOVE_DOWN   &kp PG_UP        &kp END          &kp UP      &kp HOME   &kp MINUS         &kp EQUAL
&trans      &kp TILDE        &git_status    &git_add_all    &git_commit     &git_push          &mmv MOVE_LEFT   &kp PG_DN        &kp LEFT         &kp DOWN    &kp RIGHT  &kp LEFT_BRACKET  &kp RIGHT_BRACKET
&trans      &rgb_ug RGB_OFF  &rgb_ug RGB_ON  &rgb_ug RGB_EFF  &rgb_ug RGB_EFR  &rgb_ug RGB_SPI    &mmv MOVE_RIGHT  &rgb_ug RGB_BRI  &rgb_ug RGB_BRD  &kp INSERT  &kp F11    &kp F12           &print_screen
&kp C_MUTE  &trans           &trans          &trans           &trans           &trans             &mkp LCLK        &git_pull        &git_log         &trans      &trans     &trans
            >;

            display-name = "Function";
            sensor-bindings = <&scroll_encoder>;
        };

        system_layer {
            bindings = <
&kp TILDE  &bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &mmv MOVE_UP     &kp F6  &kp F7  &kp F8      &kp F9     &kp F10      &trans
&trans     &bt BT_CLR    &bt BT_CLR_ALL  &trans        &trans        &trans          &mmv MOVE_DOWN   &trans  &trans  &kp F11     &kp F12    &kp UNDER    &kp PLUS
&trans     &out OUT_USB  &out OUT_BLE    &trans        &trans        &trans          &mmv MOVE_LEFT   &trans  &trans  &trans      &trans     &kp LBRC     &kp RBRC
&trans     &sys_reset    &trans          &bootloader   &trans        &trans          &mmv MOVE_RIGHT  &trans  &trans  &sys_reset  &soft_off  &bootloader  &trans
&password_macro     &trans        &trans          &trans        &trans        &trans          &mkp LCLK        &trans  &trans  &trans      &bench_password_macro     &password_macro
            >;

            display-name = "System";
            sensor-bindings = <&scroll_encoder>;
        };

        adjust_layer {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
            >;
            display-name = "Adjust";
        };
    };
};
